<UserControl x:Class="HandyOrgDemo.Views.UserControls.LabelDemoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HandyOrgDemo.Views.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Label Content="我是默认样式的" />
            <Label Content="我是加入样式的1"
                   Style="{StaticResource LabelDanger.Small}" />
            <Label Content="我是加入样式的2"
                   Style="{DynamicResource LabelPrimary}" />
            <Label Content="我是加入样式的3"
                   Style="{DynamicResource LabelDanger}" />
        </StackPanel>
    </Grid>
</UserControl>
