        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal">

            <!--
                动态
            -->

            <hc:AnimationPath Margin="10,10,10,10"
                              Stretch="Uniform"
                              StrokeThickness="1"
                              Style="{Binding IsOpen, Converter={StaticResource BoolToStyleConverter}}"
                              Duration="00:00:05">
            </hc:AnimationPath>

            <!--
                用数据触发器,控制动态显示
            -->
            <hc:AnimationPath Margin="10,10,10,10"
                              Stretch="Uniform"
                              Duration="00:00:05">
                <hc:AnimationPath.Style>
                    <Style TargetType="hc:AnimationPath">
                        <Setter Property="StrokeThickness" Value="6" />
                        <Setter Property="Width" Value="99" />
                        <Setter Property="Height" Value="99" />
                        <Setter Property="Data" Value="{StaticResource TwitterGeometry1}" />
                        <Setter Property="Stroke" Value="Yellow" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsOpen}"
                                         Value="True">
                                <Setter Property="StrokeThickness" Value="1" />
                                <Setter Property="Width" Value="33" />
                                <Setter Property="Height" Value="33" />
                                <Setter Property="Stroke" Value="Red" />
