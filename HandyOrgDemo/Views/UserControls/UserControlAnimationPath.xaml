        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal">
            <!--
                几个重要属性：
                Duration 时间间隔   Duration ="00:00:05"
                StrokeThickness 线条粗细 StrokeThickness="1"
