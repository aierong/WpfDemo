<Window x:Class="WpfApp.Views.BindData.ListData.plus.Views.PlusData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp.Views.BindData.ListData.plus.Views"
        xmlns:localvm="clr-namespace:WpfApp.Views.BindData.ListData.plus.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="BindingList演示"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance localvm:PlusDataViewModel,
                                         IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid  >
        <!--  3行1列的表格  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0"
                 Grid.Column="0"
                 Height="30"
                 HorizontalAlignment="Left"
                 Text="{Binding Total, Mode=OneWay, StringFormat=总计:{0}岁}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Height="23"
                   Text="员工列表:" />
    </Grid>
</Window>
