<Application x:Class="WpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Activated="Application_Activated"
             DispatcherUnhandledException="Application_DispatcherUnhandledException"
             Exit="Application_Exit"
             Startup="Application_Startup"
             StartupUri="/Views/BindData/Binds/BindsWindow1.XAML">



    <!--  Application.Resources是定义整个程序级别的资源，每个窗体都可以访问到  -->
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>


                <ResourceDictionary Source="/DictionaryColor.xaml">
                </ResourceDictionary>

                <ResourceDictionary Source="/DictionaryData.xaml">
                </ResourceDictionary>

                <!-- 这种模式必须全部从外部引入文件，不可以像下面那样再单独定义一个个资源值
                <sys:String x:Key="ComboBoxTitle">Items:</sys:String>
                -->

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>



</Application>


